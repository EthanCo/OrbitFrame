<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/include_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ImageView
                android:id="@+id/img_test"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Second Activity" />

            <Button
                android:id="@+id/btn_test_java"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Java Activity" />


            <Button
                android:id="@+id/btn_scene"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scene Activity" />

            <Button
                android:id="@+id/btn_get_service_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Service Time" />

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings Activity" />

            <Button
                android:id="@+id/btn_print_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="打印日志" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>
